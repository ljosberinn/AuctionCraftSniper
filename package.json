{
  "name": "auctioncraftsniper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "lint:types": "tsc --noEmit",
    "lint:code": "eslint src",
    "lint:code:fix": "eslint src --fix && prettier --write src",
    "postinstall": "yarn-deduplicate -l",
    "test": "jest --passWithNoTests",
    "build:static": "tsc -b tsconfig.node.json",
    "run:static:realms": "node build/scripts/battlenet/realms.js",
    "run:static:professions": "node build/scripts/battlenet/professions.js",
    "run:static:recipes": "node build/scripts/battlenet/recipes.js"
  },
  "dependencies": {
    "cookie": "0.4.1",
    "next": "10.0.1",
    "next-connect": "0.9.1",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@next/env": "10.0.1",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.1",
    "@types/cookie": "0.4.0",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.6",
    "@types/node-fetch": "2.5.7",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "babel-jest": "26.6.3",
    "eslint": "7.13.0",
    "eslint-config-galex": "2.6.3",
    "jest": "26.6.3",
    "jest-watch-typeahead": "0.6.1",
    "lint-staged": "10.5.1",
    "node-fetch": "2.6.1",
    "prettier": "2.1.2",
    "typescript": "4.0.5",
    "yarn-deduplicate": "3.1.0"
  },
  "resolutions": {
    "webpack": "5.4.0"
  },
  "hooks": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,tsx,ts,tsx,css,scss}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/jest/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "coverageDirectory": "coverage",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true
  }
}
